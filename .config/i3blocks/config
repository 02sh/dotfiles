# Based on the default i3blocks config file.
full_text=
align=center
color=#FFFFFF
separator=false
separator_block_width=8

[focused window]
command=xtitle -s
interval=persist
separator=false
color=#9fbc00

[separator]

[disk_label]
full_text=
separator=false
color=#9fbc00

[disk]
command=df -h | awk '{if($6=="/home") print $4}'
interval=10
separator=false

[separator]

[volume_label]
full_text=
separator=false
color=#9fbc00

[volume]
command=amixer get Master | grep -E -o '[0-9]{1,3}?%' | head -1
interval=1
separator=false

[separator]

[cpu_speed_label]
full_text=
separator=false
color=#9fbc00

[cpu_speed]
command=lscpu |awk -F : '($1=="CPU MHz") {printf "%3.2fGHz\n", $2/1000}'
interval=1
separator=false

[separator]

[cpu_temp_label]
full_text=
separator=false
color=#9fbc00

[cpu_temp]
command=echo "$(sensors coretemp-isa-0000 | awk '/Core 0/ {print $3}')"
interval=10
separator=false

[separator]

[battery_label]
full_text=
separator=false
color=#9fbc00

[battery]
command=echo $(cat /sys/class/power_supply/BAT1/capacity)"%"
interval=5
separator=false

[separator]

[Weather label]
full_text=
separator=false
color=#9fbc00

[weather]
command=~/.scripts/weather.sh "EUR|FR|DAXX0009|Paris"
interval=10
separator=false

[separator]

[netcheck_label]
full_text=
separator=false
color=#9fbc00

[netcheck]
command=~/.scripts/netcheck.sh
interval=5
separator=false

[separator]

[uptime_text]
full_text=
separator=false
color=#9fbc00

[uptime]
command=~/.scripts/uptime.sh
interval=60
separator=false

[separator]

[date_text]
full_text=
color=#9fbc00

[date]
command=date '+%d/%m/%Y'
interval=360
separator=false

[separator]

[time_text]
full_text=
color=#9fbc00

[time]
command=date '+%H:%M:%S' # | sed 's/:/h/'
interval=1
separator=false

[separator]

